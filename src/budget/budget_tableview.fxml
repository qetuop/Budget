<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>
<?import budget.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" 
          minHeight="-Infinity" minWidth="-Infinity" 
          prefHeight="400.0" prefWidth="600.0" 
          xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="budget.BudgetTableViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TableView fx:id="budgetTableView" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="transactionDateColumn" prefWidth="75.0" text="Transaction Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="transactionDateString" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Description">
                    <cellValueFactory>
                        <PropertyValueFactory property="description" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Amount">
                    <cellValueFactory>
                        <PropertyValueFactory property="amount" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
                <Button fx:id="readData" layoutX="274.0" layoutY="75.0" mnemonicParsing="false" onAction="#readData" text="Read Data" />
            </children>
        </AnchorPane>
    </children>
</GridPane>
